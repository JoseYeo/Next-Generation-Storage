/* Example sketch to control a stepper motor with TB6600 stepper motor driver 
   and Arduino without a library: number of revolutions, speed, and direction. 
   Adapted for DIR+ on pin 12 and PUL+ on pin 13. 
   More info: https://www.makerguides.com */

// Define stepper motor connections and steps per revolution:
#define dirPin 12
#define stepPin 13
#define stepsPerRevolution 1600

void setup() {
  // Declare pins as output:
  pinMode(stepPin, OUTPUT);
  pinMode(dirPin, OUTPUT);
}

void loop() {
  digitalWrite(dirPin, HIGH); // Set direction clockwise
  for (int i = 0; i < stepsPerRevolution; i++) {
    digitalWrite(stepPin, HIGH);
    delayMicroseconds(100); // Adjust based on your setup's capabilities
    digitalWrite(stepPin, LOW);
    delayMicroseconds(100); // Adjust based on your setup's capabilities
  }
  // No additional delay needed here unless you want a pause between movements
}

